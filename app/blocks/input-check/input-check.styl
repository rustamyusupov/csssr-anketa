.input-check
	display flex
	flex-wrap nowrap
	font-size 21px
	font-weight 700
	line-height 25px
	cursor pointer
	color color-black

	&_column_second &__label
		padding-left 26px

	&_column_third &__label
		padding-left 25px

	&__label
		position relative
		padding-left 28px

		&::before
			position absolute
			top 5px
			left 1px
			content ''
			sprite ($checkbox)

		&_indent_javascript::before
			top 4px

		&_indent_webgl > span
			position relative
			left -1px

		&_indent_accurate-eye
			padding-top 0

		&_indent_accurate-eye > span
			position relative
			left -1px

		&_indent_accurate-eye >
			for word in 1 2 3
				span:nth-child({word})
					top: (0 + word)px

		&_indent_csssr-blog
		&_indent_lazy
		&_indent_english
			padding-top 3px

		&_indent_csssr-blog a
			position relative
			text-decoration none
			color color-link

			&::after
				position absolute
				left 0
				bottom 2px
				width 100%
				height 1px
				content ''
				background-color color-link

	&__field
		display none

	&__field:checked + &__label::after
		position absolute
		top -6px
		left 3px
		content ''
		sprite($checkbox_check)
