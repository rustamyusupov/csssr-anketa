.input-check
	display block
	position relative
	display flex
	flex-wrap nowrap
	font-size 21px
	font-weight 700
	line-height 25px
	cursor pointer
	color color-black

	&_column_second &__label
		padding-left 12px

	&_column_third &__label
		padding-left 11px

	&__label
		padding-left 14px

		span
			position relative
			left -1px
			/* TODO: придумать решение */

		&_indent_accurate-eye
			padding-top 0
			padding-left 11px !important
			/* TODO: придумать решение */

		&_indent_csssr-blog
		&_indent_lazy
		&_indent_english
			padding-top 3px

		&_indent_csssr-blog a
			position relative
			text-decoration none
			color link-color

			&::after
				position absolute
				left 0
				bottom 2px
				width 100%
				height 1px
				content ''
				background-color link-color

		&_indent_english
			padding-left 13px !important
			/* TODO: придумать решение */

	/* TODO: придумать решение */
	.accurate-eye_indent_first
		position relative
		top 1px
		left -1px

	.accurate-eye_indent_second
		position relative
		top 2px
		left -1px

	.accurate-eye_indent_third
		position relative
		top 3px
		left -1px

	&__label::before
		position absolute
		top 5px
		left 1px
		content ''
		sprite ($checkbox)

	&__label_indent_javascript::before
		top 4px

	&__field
		opacity 0

	&__field:checked + &__label::after
		position absolute
		top -6px
		left 3px
		content ''
		sprite($checkbox_check)
