.slider
	display block

	&__scale
		position relative
		left -1px
		margin-bottom 4px
		size(769px, 43px)
		background transparent url('../images/slider.png') bottom left no-repeat

		&:hover
			cursor pointer

	&__pointer
		position relative
		top -18px
		left 350px
		display block
		width 50px
		height 60px

		&:hover
			cursor col-resize

		// для удобства на мобильных размер "захвата" увеличен
		&:after
			position absolute
			top 38%
			left 50%
			content ''
			transform translate(-50%, -38%)
			sprite($slider_pointer)

		&_transition
			transition left .3s ease-in-out

	&__list
		display flex
		font-size 13px
		font-weight 700
		justify-content flex-start
		line-height 19px

	&__item
		position relative
		white-space nowrap

		&:first-child
			left -1px
			margin-right 82px

		&:nth-child(2)
			top -2px
			margin-right 61px

		&:nth-child(3)
			top -2px
			margin-right 89px
			width 170px
			white-space normal

		&:nth-child(4)
			top 5px
