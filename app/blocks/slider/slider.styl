.slider
	display block

	&__scale
		position relative
		left -1px
		margin-bottom 4px
		size(769px, 43px)
		cursor pointer
		background transparent url('../images/slider.png') bottom left no-repeat

	&__pointer
		position absolute
		top 0
		left 142px
		sprite($slider_pointer)
		/* TODO: почему не псевдоэлемент? */

	&__list
		display flex
		font-size 13px
		font-weight 700
		justify-content space-between
		line-height 19px

	&__item
		position relative
		display inline
		width 170px

		&:first-child
			left -1px
			width 144px

		&:nth-child(2)
			top -2px
			margin-right 58px

		&:nth-child(3)
			top -2px
			margin-right 90px

		&:nth-child(4)
			top 5px
			width 140px
